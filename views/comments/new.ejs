<%- include("../partials/header") %>


<div class="container">
  <div class="row" style="flex-direction: column;">
    <h1 style="text-align: center;">Add a new Comment to <%= campground.name %> </h1>
    
    <div style="width: 50%; margin: 25px auto;">
      <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="comment[text]" id="" placeholder="Text">
        </div>
        <!-- <div class="form-group">
          <input class="form-control" type="text" name="comment[author]" id="" placeholder="Author">
        </div> -->
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Submit!</button>
        </div>
      </form>
      <a href="/campgrounds">Go Back</a>
    </div>
    
  </div>
</div>

<%- include("../partials/footer") %>
